@{
}
@model Mission06_Zhang.Models.Movies

<form method="post">
    <label asp-for="category">Category</label>
    <input asp-for="category" />
    <br />

    <label asp-for="title">Title</label>
    <input asp-for="title" />
    <br />

    <label asp-for="year">Year</label>
    <input asp-for="year" />
    <br />

    <label asp-for="director">Director</label>
    <input asp-for="director" />
    <br />

    <label asp-for="rating">Rating</label>
    <select asp-for="rating" class="form-control">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br /> 

    <label asp-for="edited">Edited</label>
    <label asp-for="edited" class="radio-inline">
        <input type="radio" asp-for="edited" value="Yes"> Yes
    </label>
    <label asp-for="edited" class="radio-inline">
        <input type="radio" asp-for="edited" value="No"> No
    </label>

    <br />
    <label asp-for="lent">Lent To</label>
    <input asp-for="lent" />
    <br />

    <label asp-for="notes">Notes</label>
    <input type="text" asp-for="notes" maxlength="25"/>
    <br />

    <button type="submit">Submit</button>
</form>

